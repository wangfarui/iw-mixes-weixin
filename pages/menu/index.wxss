.container {
  padding: 20rpx;
}

.menu-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #007AFF;
  padding-left: 16rpx;
}

/* 菜单网格：使用 flex 布局，每行3个 */
.menu-grid {
  display: flex;
  flex-wrap: wrap;
}

/* 每个菜单项占1/3宽度，设置一个固定高度（可根据实际需求调整） */
.menu-item {
  width: 33.33%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

/* 图片宽度约占菜单项区域的30% */
.menu-item image {
  width: 30%;
  height: 30%;
}

/* 文本居中显示，并在图片下方留有一定间距 */
.menu-item text {
  margin-top: 10rpx;
  font-size: 28rpx;
  text-align: center;
}
